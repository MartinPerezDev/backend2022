<html>
  <head>
    <title>Login Here</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/content/style.css">
  </head>
  <body class="container">
    <div class="page-header">
      <h1>Simple Auth-System</h1>
    </div>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/signup">Sign Up</a></li>
            <li><a href="/dashboard">Dashboard</a></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li><a href="">( <%= email %> )</a></li>
            <li><a href="/login">Log In</a></li>
            <li onclick="main(`<%= username %>`)"><a href="/logout">Log Out</a></li>
          </ul>
        </div>
        <!-- /.navbar-collapse -->
      </div>
      <!-- /.container-fluid -->
    </nav>

    <div class="container row">
      <h1 id="h1">Hi, <%= username %> Welcome to your Dashboard</h1>
    </div>
    
    <%- include('./partials/form-products'); -%>
    <%- include('./partials/table-products'); -%>
    <%- include('./partials/messages'); -%>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      function main(username) {
        const Toast = Swal.mixin({
          toast: true,
          position: "top-end",
          showConfirmButton: false,
          timer: 2000,
          timerProgressBar: true,
        });

        Toast.fire({
          icon: "warning",
          title: `Hasta luego ${username}`,
        });
      }
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/content/index.js"></script>
  </body>
</html>
